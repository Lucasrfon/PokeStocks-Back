// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  credit   Int    @default(100)

  @@map("users")
}

model Pokemon {
  id    Int    @id @default(autoincrement())
  name  String @unique
  pic   String @unique
  type1 String
  type2 String
  hp    Int
  atk   Int
  def   Int
  spd   Int

  @@map("pokemons")
}
