// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  credit   Int      @default(100)
  wallet   Wallet[]

  @@map("users")
}

model Pokemon {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  pic    String   @unique
  type1  String
  type2  String?
  hp     Int
  atk    Int
  def    Int
  spd    Int
  market Market[]
  wallet Wallet[]

  @@map("pokemons")
}

model Market {
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId Int     @id
  amount    Int
  value     Int

  @@map("market")
}

model Wallet {
  id        Int     @id @default(autoincrement())
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  amount    Int

  @@unique([pokemonId, userId])
  @@map("wallet")
}

model Job {
  id    Int    @id @default(autoincrement())
  type  String

  @@map("jobs")
}
